{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "styles/*": ["./src/styles/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "./.eslintrc.js",
    "src/**/*"
  ]
}